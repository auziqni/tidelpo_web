generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Device {
  id        String   @id @default(cuid())
  device_code String   @unique
  nama        String
  lat         Float
  lng         Float
  sensors     Sensor[]
}

model Sensor {
  id          Int     @id @default(autoincrement())
  device_code String
  status_tiang Status_tiang @default(aman)
  sens_soil     Float
  sens_pressure     Float
  sens_tilt     Float
  timestamp   DateTime @default(now())
  device      Device  @relation(fields: [device_code], references: [device_code])
}

enum Status_tiang{
  aman
  waspada
  bahaya
}